<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/content_home"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.edu.gdaib.bdmaplocation.HomeActivity" tools:showIn="@layout/activity_home">

    <Button
        android:id="@+id/home_btn_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/home_btn_text"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/home_tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_tv_text"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@id/home_btn_location"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>
